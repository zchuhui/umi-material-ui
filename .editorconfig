# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

# Apply for all files
[*]

charset = utf-8

# 代码行字符间距
indent_style = space
indent_size = 2

end_of_line = lf
insert_final_newline = true
 
# 自动去掉尾部空格
trim_trailing_whitespace = true 

[*.json]
indent_size = 4